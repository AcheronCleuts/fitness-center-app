-->

  <div class="max-w-4xl mx-auto p-4 sm:p-6 md:p-8">
    <div class="flex items-center gap-4 mb-6">
      <div class="grid gap-1">
        <div class="text-lg sm:text-xl font-semibold">
          <%= user.name %>
        </div>
        <div class="text-sm text-gray-500 dark:text-gray-400">Katılma Tarihi <%= user.date %>
        </div>
      </div>
    </div>
    <div class="grid md:grid-cols-2 gap-6">
      <div class="rounded-lg border bg-card text-card-foreground shadow-sm" data-v0-t="card">
        <div class="flex flex-col space-y-1.5 p-6">
          <h3 class="whitespace-nowrap text-2xl font-semibold leading-none tracking-tight">Profil Bilgileri</h3>
        </div>
        <div class="p-6 grid gap-4">
          <div class="flex items-center gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none"
              stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
              class="w-5 h-5 text-gray-500 dark:text-gray-400">
              <rect width="20" height="16" x="2" y="4" rx="2"></rect>
              <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"></path>
            </svg>
            <div>
              <div class="font-medium">Email</div>
              <div class="text-gray-500 dark:text-gray-400">
                <%= user.email %>
              </div>
            </div>
          </div>
          <div class="flex items-center gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none"
              stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
              class="w-5 h-5 text-gray-500 dark:text-gray-400">
              <rect width="20" height="16" x="2" y="4" rx="2"></rect>
              <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"></path>
            </svg>
            <div>
              <div class="font-medium">Paket Bilgisi</div>
              <% if (user.membership==0) { %>
                <div class="text-gray-500 dark:text-gray-400">Paketiniz Bulunmuyor.</div>
                <div class="text-gray-500 dark:text-gray-400">Paket satın almak için <a href="/planlar">Tıklayın!</a>
                </div>
                <% } %>
                <% if (user.membership==1) { %>
                  <div class="text-gray-500 dark:text-gray-400">EAGLE PAKET.</div>
                  <% } %>
                  <% if (user.membership==2) { %>
                    <div class="text-gray-500 dark:text-gray-400">EAGLE PLUS PAKET</div>
                    <% } %>
                    <% if (user.membership==3) { %>
                      <div class="text-gray-500 dark:text-gray-400">EAGLE PRO PAKET</div>
                      <% } %>
              
            </div>
          </div>
        </div>
      </div>
      <div class="rounded-lg border bg-card text-card-foreground shadow-sm" data-v0-t="card">
        <div class="flex flex-col space-y-1.5 p-6">
          <h3 class="whitespace-nowrap text-2xl font-semibold leading-none tracking-tight">Reservations</h3>
        </div>
        <div class="p-6">
          <div class="grid gap-4">
            <div
              class="grid grid-cols-[100px_1fr_100px] items-center gap-4 bg-gray-100 p-4 rounded-lg dark:bg-gray-800">
              <div class="font-medium">#12345</div>
              <div>
                <div class="font-medium">June 15, 2023</div>
                <div class="text-gray-500 dark:text-gray-400">Booked on May 1, 2023</div>
              </div>
              <div class="flex items-center gap-2">
                <div
                  class="px-2 py-1 rounded-full bg-green-100 text-green-600 dark:bg-green-900/20 dark:text-green-400">
                  Confirmed
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <%- include('layouts/footer') %>