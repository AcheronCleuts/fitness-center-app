<script>
  function toggleDropdown(dropdownId, buttonId) {
    const dropdown = document.getElementById(dropdownId);
    const button = document.getElementById(buttonId);
    const isOpen = button.getAttribute('aria-expanded') === 'true';
    button.setAttribute('aria-expanded', !isOpen);
    dropdown.classList.toggle('hidden', isOpen);
  }

  function selectItem(spanId, dropdownId, buttonId, value) {
    const span = document.getElementById(spanId);
    span.textContent = value;
    const dropdown = document.getElementById(dropdownId);
    const button = document.getElementById(buttonId);
    button.setAttribute('aria-expanded', 'false');
    dropdown.classList.add('hidden');
  }

  function selectItemAndClose(spanId, dropdownId, buttonId, value) {
    selectItem(spanId, dropdownId, buttonId, value);
    toggleDropdown(dropdownId, buttonId);
  }
</script>


